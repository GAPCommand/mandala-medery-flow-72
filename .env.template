# Template Configuration Environment Variables
# Copy this file to .env and customize for your deployment

# Tenant Isolation
VITE_TEMPLATE_TENANT_ID=template-tenant-{{TENANT_ID}}
VITE_TEMPLATE_MODE=template

# Brand Configuration
VITE_TEMPLATE_COMPANY_NAME={{COMPANY_NAME}}
VITE_TEMPLATE_COMPANY_TAGLINE={{COMPANY_TAGLINE}}
VITE_TEMPLATE_COMPANY_DESCRIPTION={{COMPANY_DESCRIPTION}}
VITE_TEMPLATE_COMPANY_DOMAIN={{COMPANY_DOMAIN}}
VITE_TEMPLATE_COMPANY_EMAIL={{COMPANY_EMAIL}}
VITE_TEMPLATE_COMPANY_PHONE={{COMPANY_PHONE}}

# Brand Assets
VITE_TEMPLATE_LOGO_URL={{LOGO_URL}}
VITE_TEMPLATE_LOGO_WIDTH={{LOGO_WIDTH}}
VITE_TEMPLATE_LOGO_HEIGHT={{LOGO_HEIGHT}}

# Theme Colors (HSL values)
VITE_TEMPLATE_PRIMARY_COLOR={{PRIMARY_COLOR}}
VITE_TEMPLATE_SECONDARY_COLOR={{SECONDARY_COLOR}}
VITE_TEMPLATE_ACCENT_COLOR={{ACCENT_COLOR}}
VITE_TEMPLATE_BACKGROUND_COLOR={{BACKGROUND_COLOR}}
VITE_TEMPLATE_FOREGROUND_COLOR={{FOREGROUND_COLOR}}

# Business Configuration
VITE_TEMPLATE_CURRENCY={{CURRENCY}}
VITE_TEMPLATE_TAX_RATE={{TAX_RATE}}
VITE_TEMPLATE_FREE_SHIPPING_THRESHOLD={{FREE_SHIPPING_THRESHOLD}}
VITE_TEMPLATE_MIN_ORDER_QUANTITY={{MIN_ORDER_QUANTITY}}

# Product Terminology
VITE_TEMPLATE_PRODUCT_SINGULAR={{PRODUCT_SINGULAR}}
VITE_TEMPLATE_PRODUCT_PLURAL={{PRODUCT_PLURAL}}
VITE_TEMPLATE_PRODUCT_CATEGORY={{PRODUCT_CATEGORY}}

# Industry Preset (optional - if set, will override individual settings)
VITE_TEMPLATE_INDUSTRY_PRESET={{INDUSTRY_PRESET}}

# Supabase Configuration (Template-specific)
VITE_SUPABASE_URL={{SUPABASE_URL}}
VITE_SUPABASE_ANON_KEY={{SUPABASE_ANON_KEY}}

# Advanced Features
VITE_TEMPLATE_ENABLE_ICP_BRIDGE={{ENABLE_ICP_BRIDGE}}
VITE_TEMPLATE_ENABLE_SACRED_FIRE={{ENABLE_SACRED_FIRE}}
VITE_TEMPLATE_ENABLE_ANALYTICS={{ENABLE_ANALYTICS}}